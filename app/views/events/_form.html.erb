<%= form_for @event do |f| %>
<% if @event.errors.any? %>
<div id= 'error explanation'>
	<h2><%= pluralize(@event.errors.count,'error')%>Prohibited event from being saved: %></h2>
	<ul>
		<% @event.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
<p>
<%= f.label :Name %>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :Age %>
<%= f.text_field :age %>
</p>
<p>
	<%= f.label :Email %>
	<%= f.text_field :email %>
</p>
<p> 
    <%= f.label :Comment %>
    <%= f.text_area :comment %>
</p>
<p> 
    <%= f.submit :create %>
</p>
<% end %>